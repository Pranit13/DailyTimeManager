<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dailytimemanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DailyTimeManager"
            android:label="@string/title_activity_daily_time_manager" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddTask"
            android:label="@string/title_activity_add_task" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dailytimemanager.DailyTimeManager" />
        </activity>
        <activity
            android:name=".SelectTime"
            android:label="@string/title_activity_select_time" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dailytimemanager.AddTask" />
        </activity>
        <activity
            android:name=".SeeDailyTask"
            android:label="@string/title_activity_see_daily_task" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dailytimemanager.DailyTimeManager" />
        </activity>
        <activity
            android:name=".TodaysTask"
            android:label="@string/title_activity_todays_task" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dailytimemanager.DailyTimeManager" />
        </activity>
        <activity
            android:name=".TaskOnDate"
            android:label="@string/title_activity_task_on_date" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dailytimemanager.DailyTimeManager" />
        </activity>
        <activity
            android:name=".AboutApp"
            android:label="@string/title_activity_about_app" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dailytimemanager.DailyTimeManager" />
        </activity>
    </application>

</manifest>